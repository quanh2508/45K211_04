                                                                    new SelectListItem { Value = "1" , Text = "An Khê" },
                                                                    new SelectListItem { Value = "1" , Text = "Hòa Khê" },
                                                                    new SelectListItem { Value = "1" , Text = "Hòa Hải" },
                                                                    new SelectListItem { Value = "1" , Text = "Hòa Khánh" },
                                                                    new SelectListItem { Value = "1" , Text = "Khuê Trung" },
                                                                    new SelectListItem { Value = "1" , Text = "Hòa An" },
                                                                    new SelectListItem { Value = "1" , Text = "Hòa Xuân" },
                                                                    new SelectListItem { Value = "1" , Text = "Hòa Phát" },
                                                                    new SelectListItem { Value = "1" , Text = "Hòa Quý" },
                                                                    new SelectListItem { Value = "1" , Text = "Nại Hiên Đông" },
                                                                    new SelectListItem { Value = "1" , Text = "Thuận Phước" }
                                                                },
                                                                new { @class = "form-control form-control-lg" })
                            @Html.ValidationMessageFor(model => model.StdSex, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputAddress">Địa chỉ chi tiết</label>
                    <input type="text" class="form-control" id="inputAddress">
                </div>
                <div class="form-group">
