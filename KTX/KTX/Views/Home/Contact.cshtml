                <div class="form-group">
                    <label for="inputAddress">Địa chỉ liên lạc của gia đình</label>
                </div>
                <div class="container">
                    <div class="form-group row">
                        <div class="col-sm pl-0">
                            @Html.DropDownListFor(model => model.StdSex,
                                                                new List<SelectListItem> {
                                                                    new SelectListItem { Value = "0" , Text = "--- Tỉnh / Thành phố ---" },
                                                                    new SelectListItem { Value = "1" , Text = "Đã Nẵng" },
                                                                    new SelectListItem { Value = "2" , Text = "Quảng Nam" },
                                                                    new SelectListItem { Value = "1" , Text = "Huế" },
                                                                    new SelectListItem { Value = "1" , Text = "Quảng Trị" }
                                                                },
                                                                new { @class = "form-control form-control-lg" })
                            @Html.ValidationMessageFor(model => model.StdSex, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-sm">
                            @Html.DropDownListFor(model => model.StdSex,
                                                               new List<SelectListItem> {
                                                                   new SelectListItem { Value = "0" , Text = "--- Quận/ Huyện ---" },
                                                                   new SelectListItem { Value = "1" , Text = "Ngũ Hành Sơn" },
                                                                   new SelectListItem { Value = "2" , Text = "Cẩm Lệ" },
                                                                   new SelectListItem { Value = "1" , Text = "Liên Chiểu" },
                                                                   new SelectListItem { Value = "1" , Text = "Sơn Trà" },
                                                                   new SelectListItem { Value = "1" , Text = "Hải Châu" },
                                                                   new SelectListItem { Value = "1" , Text = "Miền Bắc" },
                                                                   new SelectListItem { Value = "1" , Text = "Thanh Khê" }
                                                               },
                                                               new { @class = "form-control form-control-lg" })
                            @Html.ValidationMessageFor(model => model.StdSex, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-sm pr-0">
                            @Html.DropDownListFor(model => model.StdSex,
